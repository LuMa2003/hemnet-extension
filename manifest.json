{
    "manifest_version": 2,
    "name": "Hemnet extension",
    "version": "1.0",
    "description": "Calculates the monthly cost for apartments on hemnet. ",
    "icons": {
        "48": "hemnet.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.hemnet.se/bostad/lagenhet-*"],
            "js": ["monthly.js"],
            "run_at": "document_idle"
        }
    ]
}
